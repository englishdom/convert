{
    "name": "englishdom/convertor",
    "description": "Text converter",
    "type": "library",
    "homepage": "https://github.com/englishdom/convertor",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0.0"
    },
    "autoload": {
        "psr-4": {
            "Convertor\\": "src/Convertor/",
            "Unit\\Convertor\\": "test"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
